<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_address_input_first_name"
                style="@style/RegisterInputEditText"
                android:hint="First name"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/edit_address_input_last_name"
                style="@style/RegisterInputEditText"
                android:hint="Last name"
                android:inputType="textCapWords" />

            <View style="@style/RegisterDivider" />

            <EditText
                android:id="@+id/edit_address_input_company_name"
                style="@style/RegisterInputEditText"
                android:hint="Company name"
                android:inputType="textCapWords" />


            <EditText
                android:id="@+id/edit_address_input_company_address"
                style="@style/RegisterInputEditText"
                android:hint="Company address"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/edit_address_country_tv"
                style="@style/RegisterInputEditText"
                android:hint="Country"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/edit_address_zone_tv"
                style="@style/RegisterInputEditText"
                android:hint="Zone"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/edit_address_input_city"
                style="@style/RegisterInputEditText"
                android:hint="City"
                android:inputType="textCapWords" />


            <EditText
                android:id="@+id/edit_address_input_post_code"
                style="@style/RegisterInputEditText"
                android:hint="Post Code" />

            <Button
                android:id="@+id/edit_address_save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@drawable/background_button_login"
                android:padding="@dimen/margin_medium"
                android:text="SAVE" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>