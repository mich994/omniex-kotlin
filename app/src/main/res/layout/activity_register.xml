<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_input_email"
                style="@style/RegisterInputEditText"
                android:hint="@string/login_email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/register_input_password"
                style="@style/RegisterInputEditText"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/register_input_confirm_password"
                style="@style/RegisterInputEditText"
                android:hint="Confirm password"
                android:inputType="textPassword" />

            <View style="@style/RegisterDivider" />

            <EditText
                android:id="@+id/register_input_first_name"
                style="@style/RegisterInputEditText"
                android:hint="First name"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/register_input_last_name"
                style="@style/RegisterInputEditText"
                android:hint="Last name"
                android:inputType="textCapWords" />

            <View style="@style/RegisterDivider" />

            <EditText
                android:id="@+id/register_input_company_name"
                style="@style/RegisterInputEditText"
                android:hint="Company name"
                android:inputType="textCapWords" />


            <EditText
                android:id="@+id/register_input_company_address"
                style="@style/RegisterInputEditText"
                android:hint="Company address"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/register_input_telephone"
                style="@style/RegisterInputEditText"
                android:hint="Telephone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/register_input_country"
                style="@style/RegisterInputEditText"
                android:hint="Country"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/register_input_city"
                style="@style/RegisterInputEditText"
                android:hint="City"
                android:inputType="textCapWords" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/register_input_post_code"
                        style="@style/RegisterInputEditText"
                        android:hint="Post Code" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/register_input_tax"
                        style="@style/RegisterInputEditText"
                        android:hint="Tax number"
                        android:inputType="number" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/RegisterDivider" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/margin_big"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/register_btn_register"
                    android:background="@drawable/background_button_login"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_width="0dp"
                    android:text="Register"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/register_btn_cancel"
                    android:text="Cancel"
                    android:background="@drawable/background_button_login"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>