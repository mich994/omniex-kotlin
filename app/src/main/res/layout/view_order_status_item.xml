<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/background_cart_item"
    android:layout_margin="@dimen/margin_small"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/margin_small"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_status_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_sixteen"
            android:text="Name Name"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_size_sixteen"
            android:id="@+id/order_status_date"
            android:text="Date: 23/11/2017"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_size_sixteen"
            android:id="@+id/order_status_price"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/primary_text"
            android:text="5 item/s - 2435.56$"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_status_tv"
        android:layout_gravity="center"
        android:gravity="end"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/text_size_twenty"
        android:paddingEnd="@dimen/margin_medium"
        android:text="PENDING"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





</LinearLayout>