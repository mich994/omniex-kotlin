<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shipping_method_cd"
    android:background="@drawable/background_login_edit_text"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/icons"
    app:cardCornerRadius="@dimen/margin_medium"
    android:layout_margin="@dimen/margin_medium"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shipping_method_title"
            android:text="Weight Based"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/roboto_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/shipping_method_subtitle"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/roboto_black"
            android:text="Netherlands (21%)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shipping_method_price"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/roboto_regular"
            android:text="Price: 12.00$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>